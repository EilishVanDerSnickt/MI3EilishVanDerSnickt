<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".home_fragment">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <!-- TODO: Update blank fragment layout -->

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mijn boodschappenlijstjes"
                android:textSize="25dp"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:textColor="#424242"
                android:id="@+id/titel"/>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/titel"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="20dp">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"

                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#424242"
                    android:id="@+id/txt_boodschappenlijstje"
                    android:text="Test"
                    android:layout_marginLeft="16dp"
                    android:onClick="bekijkItems"/>
        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_boodschappenlijstVerwijderen"
            android:text="Verwijder een boodschappenlijst"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/txt_boodschappenlijstje"
            android:textSize="14dp"
            android:layout_marginTop="450dp"
            android:backgroundTint="#DF013A"
            android:textColor="#FFFFFF"/>

</FrameLayout>